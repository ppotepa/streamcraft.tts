{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2022",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx",
        /* Modules */
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "paths": {
            "@domain/*": [
                "./src/domain/*"
            ],
            "@application/*": [
                "./src/application/*"
            ],
            "@infrastructure/*": [
                "./src/infrastructure/*"
            ],
            "@presentation/*": [
                "./src/presentation/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ]
        },
        /* Emit */
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noEmit": true,
        /* Interop Constraints */
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        /* Type Checking - Strict but practical */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        /* Completeness */
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}